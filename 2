# NumPy para calculos matematicos
# Matplotlib para graficar
import numpy as np
import matplotlib.pyplot as plt

# generamos 100 valores entre 0 y 2pi

x = np.linspace(0, 2*np.pi, 100)

# creamos una figura
plt.figure(figsize=(8,4))

# primera grafica (1 fila, 2 columnas, posición 1)
plt.subplot(1, 2, 1)
plt.plot(x, np.sin(x))  # Grafica la funcion seno
plt.title("funcion seno")

# segunda grafica (1 fila, 2 columnas, posición 2)
plt.subplot(1, 2, 2)
plt.plot(x, np.cos(x))  # Grafica la funcion coseno
plt.title("funcion coseno")

# funcion cuadratica

# generamos valores entre -10 y 10
x = np.linspace(-10, 10, 100)

y = x**2

# nueva figura independiente
plt.figure()

# graficamos la funcion cuadratica
plt.plot(x, y, label="y = x")

plt.title("funcion cuadratica")
plt.xlabel("x")  
plt.ylabel("y")   
plt.legend()      
plt.grid(True)    
plt.show()      



#crecimiento exponencial


# generamos valores entre 0 y 5
x = np.linspace(0, 5, 50)

# calculamos la funcion exponencial 
y = np.exp(x)

# nueva figura
plt.figure()
plt.plot(x, y)

plt.title("crecimiento exponencial")
plt.xlabel("x")
plt.ylabel("e^x")

# Guardamos la grafica
plt.savefig("grafica_exponencial.png", dpi=300)

# Mostramos la gráfica
plt.show()
